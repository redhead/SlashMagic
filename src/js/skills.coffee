	@getAll: ->
		db = @database.slice()
		
		for index, name of Weapons.shortRangeCategories
			db.unshift
				name: "Boj (#{name})"
				type: 'physical'
		
		db.unshift
				name: "Boj s luky"
				type: 'combined'
		db.unshift
				name: "Boj s kušemi"
				type: 'combined'
		
		return db

	@getAllAsMap: ->
		map = {}
		map[skill.name] = skill for skill in @getAll()
		return map